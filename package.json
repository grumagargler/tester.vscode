{
	"name": "tester",
	"displayName": "Tester 1C",
	"description": "Tester 1C: Scenario Editor",
	"version": "0.0.6",
	"publisher": "Reshitko",
	"license": "SEE LICENSE IN LICENSE",
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"testing",
		"bdd",
		"tdd",
		"scenario",
		"1C:Enterprise"
	],
	"activationEvents": [
		"onLanguage:bsl"
	],
	"main": "./extension",
	"contributes": {
		"commands": [{
				"command": "extension.run",
				"title": "Run Test",
				"when": "editorTextFocus && editorLangId == 'bsl'"
			},
			{
				"command": "extension.setMain",
				"title": "Set Main",
				"when": "editorTextFocus && editorLangId == 'bsl'"
			}
		],
		"menus": {
			"editor/context": [{
					"when": "editorTextFocus",
					"command": "extension.run",
					"group": "navigation"
				},
				{
					"when": "editorTextFocus",
					"command": "extension.setMain",
					"group": "navigation"
				}
			]
		},
		"keybindings": [{
				"command": "extension.run",
				"key": "F5",
				"mac": "F5",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.checkModule",
				"key": "ctrl+F7",
				"mac": "cmd+F7",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.pickField",
				"key": "ctrl+alt+space",
				"mac": "cmd+alt+space",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.generateID",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "editorTextFocus"
			}
		],
		"snippets": [{
			"language": "bsl",
			"path": "./snippets/tester.json"
		}]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"extensionDependencies": [
		"xDrivenDevelopment.language-1c-bsl"
	],
	"devDependencies": {
		"vscode": "^1.1.6",
		"eslint": "^4.6.1",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/grumagargler/tester.vscode.git"
	},
	"homepage": "http://test1c.com",
	"icon": "images/icon.png"
}