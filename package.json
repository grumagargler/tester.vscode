{
	"name": "tester",
	"displayName": "Tester",
	"description": "Tester Extension",
	"version": "0.0.1",
	"publisher": "grumagargler",
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:bsl"
	],
	"main": "./extension",
	"contributes": {
		"commands": [{
				"command": "extension.run",
				"title": "Run Test",
				"when": "editorTextFocus && editorLangId == 'bsl'"
			},
			{
				"command": "extension.setMain",
				"title": "Set Main",
				"when": "editorTextFocus && editorLangId == 'bsl'"
			}
		],
		"menus": {
			"editor/context": [{
					"when": "editorTextFocus",
					"command": "extension.run",
					"group": "navigation"
				},
				{
					"when": "editorTextFocus",
					"command": "extension.setMain",
					"group": "navigation"
				}
			]
		},
		"keybindings": [{
				"command": "extension.run",
				"key": "F5",
				"mac": "F5",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.checkModule",
				"key": "ctrl+F7",
				"mac": "cmd+F7",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.pickField",
				"key": "ctrl+alt+space",
				"mac": "cmd+alt+space",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.generateID",
				"key": "ctrl+shift+i",
				"mac": "cmd+shift+i",
				"when": "editorTextFocus"
			}
		],
		"snippets": [{
			"language": "bsl",
			"path": "./snippets/tester.json"
		}]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"vscode": "^1.1.6",
		"eslint": "^4.6.1",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	}
}